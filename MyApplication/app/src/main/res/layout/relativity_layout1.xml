<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    >
    <LinearLayout
        android:id="@+id/vote_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/place_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"/>
        <RadioGroup
            android:id="@+id/place_label_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/place1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小杨山"
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/place2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小詹山"
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/place3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小高山"
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/place4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小肖山"
                android:textSize="22sp"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hobby_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/vote_11"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择兴趣爱好："
            android:textColor="#FF8000"
            android:textSize="25sp"/>
        <CheckBox
            android:id="@+id/like_shuttlecock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="羽毛球"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/like_basketball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="篮球"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/like_ping-pong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乒乓球"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/like_volleyball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排球"
            android:textSize="18sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/hobby_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="16"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/user"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="100"/>
        <Button
            android:id="@+id/puls_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"/>
        <Button
            android:id="@+id/substract_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>



    </LinearLayout>

    <Button
        android:id="@+id/submit_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/s"
        android:text="提交"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_view"
        android:text="结果"
        android:textSize="20sp"/>


</RelativeLayout>